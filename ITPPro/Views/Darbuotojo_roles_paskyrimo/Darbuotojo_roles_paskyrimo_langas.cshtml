@model ITPPro.ViewModels.CreateJobOfferModel
@{
    ViewBag.Title = "Darbo užklausos kūrimas";
    int cid = (int)ViewData["code"];
}

<h2>Darbo užklausos kūrimas</h2>

@using (Html.BeginForm("Register", "Darbuotojo_roles_paskyrimo", new { clientid = cid }, FormMethod.Post))
{
    <div class="form-horizontal">
        <h4>Naujo valdytojo registracija</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        @{
            List<SelectListItem> listItems = new List<SelectListItem>();
            listItems.Add(new SelectListItem
            {
                Text = "Buhalteris",
                Value = "Buhalteris"
            });
            listItems.Add(new SelectListItem
            {
                Text = "Vadybininkas",
                Value = "Vadybininkas",
                Selected = true
            });
        }

        <div class="form-group">
            @Html.LabelFor(model => model.Job, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Job, listItems, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Job, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RepeatPassword, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.RepeatPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RepeatPassword, "", new { @class = "text-danger" })
            </div>
        </div>
    

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sukurti" class="btn btn-default" />
            </div>
        </div>
    </div>
}

